<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/backrepeat"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_previous"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:src="@drawable/firstpageicon" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center" >

                <ImageButton
                    android:id="@+id/btn_animals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/backrepeat"
                    android:onClick="onClick"
                    android:src="@drawable/animals" />

                <ImageButton
                    android:id="@+id/btn_automobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/backrepeat"
                    android:onClick="onClick"
                    android:src="@drawable/cars" />

                <ImageButton
                    android:id="@+id/btn_cartoon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/backrepeat"
                    android:onClick="onClick"
                    android:layout_margin="5dp"
                    android:src="@drawable/cartoons" />

                <ImageButton
                    android:id="@+id/btn_dionasours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/backrepeat"
                    android:onClick="onClick"
                    android:layout_margin="5dp"
                    android:src="@drawable/dionasours" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <ImageButton
                    android:id="@+id/btn_dragon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/backrepeat"
                    android:onClick="onClick"
                    android:padding="5dp"
                    android:src="@drawable/dragons" />

                <ImageButton
                    android:id="@+id/btn_fantasy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/backrepeat"
                    android:onClick="onClick"
                    android:padding="5dp"
                    android:src="@drawable/fantasy" />

                <ImageButton
                    android:id="@+id/btn_flower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/backrepeat"
                    android:onClick="onClick"
                    android:padding="5dp"
                    android:src="@drawable/flowers" />

                <ImageButton
                    android:id="@+id/btn_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/backrepeat"
                    android:onClick="onClick"
                    android:padding="5dp"
                    android:src="@drawable/people" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_Favorites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="موارد مورد علاقه"
        android:onClick="onClick" />

    <Button
        android:id="@+id/btn_downloadItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onDownloadClick"
        android:text="@string/getMorePaintings" />

</LinearLayout>